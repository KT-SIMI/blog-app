<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog App | Home</title>
    <link rel="icon" type="image/x-icon" href="/favicon.svg" />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <nav class="navbar">
      <div class="navbar__container">
        <a href="/views/verified/" class="navbar__logo">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#0080ff" class="bi bi-pen" viewBox="0 0 16 16">
            <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
          </svg>
          Blog App</a>
        <div class="navbar__toggle" id="mobile-menu">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </div>
        
        <ul class="navbar__menu">
          <div class="top__bar">
            <canvas id="draw"></canvas>
          </div>
          <li class="navbar__item">
            <a href="/views/verified/profile" class="navbar__links">Profile</a>
          </li>
          <li class="navbar__item">
            <a href="/views/verified/blogCreate" class="navbar__links">Write Blog</a>
          </li>
          <!-- <li class="navbar__item">
            <a href="/" class="navbar__links">My Blogs</a>
          </li> -->

          <li class="navbar__btn">
            <a href="/views/logout" class="button">Log Out</a>
          </li>
        </ul>
      </div>
    </nav>
    <h1 id="home_header">Home</h1>
    <header>
      <p>Hello, <%= user.firstname %></p>
      <div class="header_links">
        <a href="#blogs" class="link active" id="blogLink" onClick="displayTab('blogs', 'blogLink')">Blogs</a>
        <a href="#tags" class="link" id="tagLink" onClick="displayTab('tags', 'tagLink')">Tags</a>
        <a href="#authors"  class="link" id="authorLink" onClick="displayTab('authors', 'authorLink')">Authors</a>
      </div>
    </header>
    <div class="main_container">
      <div id="blogs" class="main displayed">
        <h1>Blogs</h1>
        <ul>
          <% blogs.forEach(blog => { %>
            <li>
              <a href="/views/verified/getSingleBlog/<%= blog._id %>" class="blogs">
                <h3><%= blog.title %></h3>
              
               <p style="font-weight: 400;
                opacity: 0.7;">
                Description: <%= blog.description %>
                <br>
                Written by: <%= blog.authorName %>
              </p> 
              </a>
            </li>
      
          <% }); %>
        </ul>
      </div>

      <div id="tags" class="main">
        <h1>Tags</h1>
        <ul>
          <% tags.forEach(tag => { %>
            <li>
              <a href="/views/verified/getSingleTag/<%= tag._id %>" tagId="<%= tag._id %>">
              <%= tag.name %>
            </a>
            </li>
          <% }); %>
        </ul>
      </div>

      <div id="authors" class="main">
        <h1>Authors</h1>
        <ul>
          <% authors.forEach(author => { %>
            <li>
              <a href="/views/verified/getSingleAuthor/<%= author._id %>" authorId="<%= author._id %>">
              <%= author.firstname, %>
              <%= author.lastname %>
            </a>
            </li>
          <% }); %>
        </ul>
      </div>
    </div>
    <script src="/script.js"></script>
  </body>
</html>
